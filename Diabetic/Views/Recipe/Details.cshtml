@model RecipeViewModel

<h1>@Model.Recipe.Name (@Model.Recipe.TotalKcal)</h1>

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Ingredient name</th>
            <th scope="col">Amount</th>
            <th scope="col">Kcal</th>
            <th scope="col">GI</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Recipe.Ingredients)
        {
            <tr>
                <th scope="row">@item.Product.Id</th>
                <td>@item.Product.Name</td>
                <td>@item.Amount</td>
                <td>@item.Kcals </td>
                    @if (Model.IsGreenGI(item.Product.GI))
                    {
                        <text>
                    <td class="table-success"> @item.Product.GI </td>
                        </text>
                    }
                    @if (Model.IsOrangeGI(item.Product.GI))
                    {
                        <text>
                    <td class="table-warning"> @item.Product.GI </td>
                        </text>
                    }
                    @if (Model.IsRedGI(item.Product.GI))
                    {
                        <text>
                    <td class="table-danger"> @item.Product.GI </td>
                        </text>
                    }
            </tr>
        }
        <tr>
            <td class="text-bg-primary"></td>
            <td class="text-bg-primary" colspan="2">Total: </td>
            <td class="text-bg-primary">@Model.Recipe.TotalKcal</td>
            <td class="text-bg-primary"></td>
        </tr>
    </tbody>
</table>
