@model DayDietViewModel

<div class="container">
    <h4> Kcals dla dnia: @Model.SelectedKcals </h4>
    <h4> GL dla dnia: @Model.SelectedGL </h4>

    <h2>Śniadanie: @Model.RecipesForDay.Breakfast.Name (@Model.RecipesForDay.Breakfast.TotalKcal)</h2>
    @await Html.PartialAsync("_recipe.cshtml", Model.RecipesForDay.Breakfast)

    <h2>Lunch: @Model.RecipesForDay.Lunch.Name (@Model.RecipesForDay.Lunch.TotalKcal)</h2>
    @await Html.PartialAsync("_recipe.cshtml", Model.RecipesForDay.Lunch)

    <h2>Obiad: @Model.RecipesForDay.Dinner.Name (@Model.RecipesForDay.Dinner.TotalKcal)</h2>
    @await Html.PartialAsync("_recipe.cshtml", Model.RecipesForDay.Dinner)

    <h2>Kolacja: @Model.RecipesForDay.Supper.Name (@Model.RecipesForDay.Supper.TotalKcal)</h2>
    @await Html.PartialAsync("_recipe.cshtml", Model.RecipesForDay.Supper)
</div>
